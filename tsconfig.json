{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@pages/*": [
                "tests/pages/*"
            ],
            "@utils/*": [
                "tests/utils/*"
            ],
            "@fixtures/*": [
                "tests/fixtures/*"
            ]
        }
    },
    "include": [
        "tests/**/*",
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}